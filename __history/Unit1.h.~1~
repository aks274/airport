struct staff {

	char company[20];
	char airbus[20];
	char country[20];
	char city[20];
	int cost;

	friend bool operator < (const staff& a, const staff& b) {
		return a.cost < b.cost;
	} // for sort by pay

	friend bool operator == (const staff& a, const staff& b)

	{
		return a.cost == b.cost;
	} // for search by pay

};

using namespace std;
extern vector<staff>crew;
extern int iMax, iCur;


